{
  "name": "hardhat-chainlink-plugin",
  "version": "0.1.0",
  "description": "Hardhat TypeScript plugin to run a chainlink node and interact with it",
  "repository": "github:protofire/hardhat-chainlink-plugin",
  "author": "Protofire.io",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin"
  ],
  "scripts": {
    "lint:fix": "prettier --write 'src/**/*.{js,ts}' 'test/**/*.{js,ts}' && tslint --fix --config tslint.json --project tsconfig.json",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "test": "mocha --exit --recursive 'test/**/*.test.ts'",
    "build": "tsc --project tsconfig.json && cp deprecated_files/Dockerfile dist && cp deprecated_files/docker-compose.yaml dist && cp deprecated_files/env.template dist/.env && cp deprecated_files/.api dist && cp deprecated_files/.password dist",
    "watch": "tsc -w --project tsconfig.json",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@types/chai": "^4.3.3",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.16",
    "@types/node-fetch": "^2.6.2",
    "@types/uuid": "^8.3.4",
    "chai": "^4.3.6",
    "hardhat": "^2.11.1",
    "mocha": "^10.0.0",
    "prettier": "2.7.1",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.8.2"
  },
  "peerDependencies": {
    "hardhat": "^2.0.0"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.5.1",
    "@nomicfoundation/solidity-analyzer": "^0.1.0",
    "docker-compose": "^0.23.17",
    "axios": "0.27.2",
    "uuid": "^9.0.0"
  }
}
